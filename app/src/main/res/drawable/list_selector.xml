<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/list_background_pressed" android:startColor="@color/list_background_pressed" />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/list_background" android:startColor="@color/list_background" />
        </shape>
    </item>

</selector>